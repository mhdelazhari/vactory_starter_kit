<div class="appointment__wrapper py-4">

  <h2 class="appointment__title text-center">{{ 'Choisissez une agence'|t }}</h2>

    {% if content is not empty %}
      <div class="row justify-content-center">
      {% for item in content %}
        {% set image = item.image_uri is defined ? file_url(item.image_uri) : '' %}
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <article class="card-appointment h-100 text-center bg-white border border--active rounded shadow cursor-pointer" onClick="window.open('{{ url('vactory_appointment.site_appointment_types_select', {'agency': item.agency_path }) }}', '_self')">
            <div class="card-appointment__image">
              <img src="{{ image is not empty ? image : '/themes/vactory/assets/img/agence.svg' }}" alt="{{ item.title }}" class="img-fluid">
            </div>
            <hr>
            <h3 class="card-appointment__title">{{ item.title }}</h3>
          </article>
        </div>
      {% endfor %}
      </div>
    {% else %}
      <h2 class="text-center text-danger">{{ 'Aucune agence trouv√©e.'|t }}</h2>
    {% endif %}

</div>
